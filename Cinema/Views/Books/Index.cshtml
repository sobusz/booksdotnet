<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-4">

            <div class="card">
                @*<img class="card-img-top" src="..." alt="Card image cap">*@

                <p>
                    @{
                        var base64 = Convert.ToBase64String(item.CoverImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }

                    <img src="@imgSrc" class="col-sm-12"/>
                </p>

                <div class="card-body">
                    <h3 class="card-title" style="height: 16vh">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h3>
                    <h4 class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(modelItem => item.Author)
                    </h4>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(modelItem => item.Genre)
                    </h6>
                    @Html.DisplayFor(modelItem => item.BookAddedTime)

                    <h6 class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(modelItem => item.PublishYear)
                    </h6>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>


                    @*@Html.DisplayFor(modelItem => item.CoverImage)*@

                    <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
